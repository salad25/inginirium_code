#include <windows.h> 
#include <iostream> 
#include<conio.h>
using namespace std; 
void space(int i)
{
for (int k = 0; k < i; k++) cout << ' ';
}
void symbol(int i)
{
for (int k = 0; k < i; k++)
cout << '*';
}
void line_break(int i)
{
for (int k = 0; k < i; k++) 
cout << endl;
}
void ball(int i)
{
for (int k = 0; k < i; k++)
cout << "{}";
}
void mac(int i)
{
for (int k = 0; k < i; k++)
cout << "&";
}
void tab(int i)
{
for (int k = 0; k < i; k++)
cout << "||";
}

